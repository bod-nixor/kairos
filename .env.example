APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC

# Feature flags and debugging
KAIROS_DEBUG=

# Session configuration
SESSION_COOKIE_NAME=regatta_session
SESSION_COOKIE_PATH=/
SESSION_COOKIE_DOMAIN=
SESSION_COOKIE_SAMESITE=Lax

# Google Workspace domain allowed to authenticate
ALLOWED_DOMAIN=example.edu

# Default role assigned to new users during authentication
DEFAULT_ROLE_NAME=student

# OAuth client ID used by the front-end and API
GOOGLE_CLIENT_ID=replace-with-your-client-id.apps.googleusercontent.com

# WebSocket relay configuration
WS_SHARED_SECRET=replace-with-random-secret
WS_TOKEN_TTL=600
WS_SOCKET_PATH=/websocket/socket.io/
WS_PUBLIC_URL=wss://kairos.nixorcorporate.com
WS_EMIT_BIN=
WS_PYTHON_BIN=python3

# Database configuration
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=regatta
DB_USERNAME=regatta
DB_PASSWORD=secret
DB_CHARSET=utf8mb4
# Enable persistent connections ("true" to enable, blank/false to disable)
DB_PERSISTENT=false
# Alternatively, supply a full DSN string:
# DB_DSN=mysql:host=127.0.0.1;port=3306;dbname=regatta;charset=utf8mb4
